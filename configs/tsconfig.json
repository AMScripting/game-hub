{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "lib": [
      "esnext",
      "es2017",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    // Typing
    "alwaysStrict": true,
    "checkJs": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,
    // Dev stuff
    "types": [
      "node",
      "mocha"
    ],
  }
}

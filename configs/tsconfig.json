{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "importsNotUsedAsValues": "preserve",
    // Typing
    "alwaysStrict": true,
    "checkJs": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,
    // Dev stuff
    "types": [
      "node",
      "mocha"
    ],
  }
}

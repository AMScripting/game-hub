{
  "name": "game-hub",
  "description": "Webcomponent game-hub following open-wc recommendations",
  "license": "MIT",
  "author": "game-hub",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore && tsc",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore ",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "build": "npm run build:clean && npm run build:bundle && npm run build:analyze",
    "build:analyze": "cem analyze --litelement --globs \"**/*.ts\" --exclude \"node_modules\"",
    "build:bundle": "rollup -c rollup.config.js",
    "build:clean": "rimraf dist",
    "start": "wds",
    "start:build": "npm run build && wds --root-dir dist --app-index index.html --open"
  },
  "dependencies": {
    "idb": "^7.0",
    "lit": "^2.0",
    "open-props": "^1.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5",
    "@open-wc/dev-server-hmr": "^0.1",
    "@open-wc/eslint-config": "^7.0",
    "@open-wc/testing": "^3.0",
    "@rollup/plugin-commonjs": "^21.0",
    "@rollup/plugin-json": "^4.1",
    "@rollup/plugin-node-resolve": "^13.0",
    "@typescript-eslint/eslint-plugin": "^5.6",
    "@typescript-eslint/parser": "^5.6",
    "@web/dev-server": "^0.1",
    "@web/dev-server-esbuild": "^0.2",
    "@web/dev-server-import-maps": "^0.0.6",
    "@web/dev-server-rollup": "^0.3",
    "@web/rollup-plugin-html": "^1.10",
    "@web/rollup-plugin-import-meta-assets": "^1.0",
    "@web/test-runner": "^0.13",
    "@web/test-runner-playwright": "^0.8",
    "babel-plugin-template-html-minifier": "^4.1",
    "copyfiles": "^2.4",
    "eslint": "^7.32",
    "eslint-config-prettier": "^8.3",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^4.3",
    "lint-staged": "^10.5",
    "prettier": "^2.4",
    "rimraf": "^3.0",
    "rollup": "^2.61",
    "rollup-plugin-copy": "^3.4",
    "rollup-plugin-esbuild": "^4.7",
    "rollup-plugin-terser": "^7.0",
    "tslib": "^2.3",
    "typescript": "^4.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier",
      "plugin:wc/recommended",
      "plugin:lit/recommended",
      "plugin:lit-a11y/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "lit",
      "lit-a11y"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.ts",
            "**/*.config.mjs",
            "**/*.config.js"
          ]
        }
      ],
      "import/no-unresolved": "off",
      "lines-between-class-members": "off",
      "no-unused-vars": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/no-shadow": [
        "error"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}

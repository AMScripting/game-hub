{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
    "incremental": true,
    "useDefineForClassFields": false,
    "baseUrl": "src",
    "paths": {
      // "@components/*": ["components/*"],
      // "@schemas/*": ["schemas/*"],
      // "@services/*": ["services/*"],
      // "@workers/*": ["workers/*"]
    }
  },
  "include": ["**/*.ts"]
}
